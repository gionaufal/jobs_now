<div class="row">
  <section class="jobs col-md-10">
    <% @jobs.each do |job| %>
    <div class="job col-md-6 col-xs-12">
      <h1><%= link_to job.title, job %></h1>
      <p><%= job.company.name %></p>
      <p><%= job.location %></p>
      <% if job.featured? %>
      <p><strong>Destaque</strong></p>
      <% end %>
    </div>
    <% end %>
  </section>

  <section class="companies col-md-2">
    <h3>Empresas</h3>
    <ul>
      <% @companies.each do |company| %>
      <li><%= link_to company.name, company %></li>
      <% end %>
    </ul>
    <h3>Categorias</h3>
    <ul>
      <% @categories.each do |category| %>
        <li><%= link_to category.name, category %></li>
      <% end %>
    </ul>
  </section>
</div>
