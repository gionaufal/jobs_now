<div class="row">
  <div class="jobs col-sm-10">
    <% @jobs.each do |job| %>
      <% if !job.expired? %>
        <div class="job col-xs-12 text-center">
          <h1><%= link_to job.title, job %></h1>
          <p><%= job.company.name %></p>
          <p><%= job.location %></p>
          <% if job.featured? %>
            <p><strong>Destaque</strong></p>
          <% end %>
          <% if job.recent? %>
            <p>Novidade!</p>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="companies col-sm-2">
    <h3>Empresas</h3>
    <ul>
      <% @companies.each do |company| %>
      <li><%= link_to company.name, company %></li>
      <% end %>
    </ul>
    <h3>Categorias</h3>
    <ul>
      <% @categories.each do |category| %>
        <li><%= link_to category.name, category %></li>
      <% end %>
    </ul>
  </div>
</div>
